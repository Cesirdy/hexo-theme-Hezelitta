#post-body
	p 
		line-height 1.7
	a
		&:hover
			text-decoration underline
.headerlink
	&:before
		content '#'
.home 
	h1 
		font-size 30px
		letter-spacing -1px
		color #222
		font-weight 700
	h2 
		font italic 19px/1.3em Georgia,serif
		color #bbb
#post-toc
	position relative
	text-align right
	a
		&:hover
			text-decoration underline
	ol
		list-style none
	>ol
		position fixed
		display inline-block
		text-align left
		max-width 10rem
		margin-left 1rem
	.toc-child
		margin 0.2rem 0 0.2rem 0.5rem
.post
	text-align center
	h1 
		margin-bottom 0
		color #222
		font 300 2rem "Helvetica Neue",Helvetica,Arial,sans-serif
	h2 
		font 300 1.5rem "Helvetica Neue",Helvetica,Arial,sans-serif
		font-size 1.2rem
		margin -5px 0 40px 0
		color color-meta
		text-transform uppercase
		letter-spacing 2px
		display inline-block
.footline 
	font italic 400 .8rem "Helvetica Neue",Helvetica,Arial,sans-serif
	display inline-block
	margin 40px 0 -5px 0
	a 
		&:before 
			content "#"
		&:hover
			text-decoration underline
#post-meta 
	font-size .8rem
	font-weight 700
	line-height 1.4
	border-top 1px solid #eee
	padding 40px 0
	margin 40px 0
	color #444
	border-bottom 1px solid #eee
	div 
		margin 0 25px 0 0
		float left
		span 
			color #aaa
			font-weight 500
			display block
	img 
		height 36px
		width 36px
		float left
		border-radius 50%
		margin 3px 20px 0 0
		box-shadow 0 0 0 3px #fff,0 0 0 4px #eee
.dark 
	color #1e2025
#back2top 
	float right
	margin -2px
	a 
		font-size .8rem
		font-weight 700
		margin-top 4px
		color #fff
		display inline-block
		vertical-align middle
		padding 6px 10px
		border-radius 4px
		margin-left 2px
		background color-theme
		&:hover 
			opacity .8
#comment
	margin 2rem 0