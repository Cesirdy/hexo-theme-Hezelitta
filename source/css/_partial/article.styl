#post-body
	p 
		line-height 1.7
	a
		&:hover
			text-decoration underline
	.headerlink
		&:before
			content '#'
.home 
	h1 
		font-size 30px
		letter-spacing -1px
		color #222
		font-weight 700
	h2 
		font italic 19px/1.3em Georgia,serif
		color #bbb
#post-toc
	position relative
	text-align right
	a
		&:hover
			text-decoration underline
	ol
		list-style none
	>ol
		position fixed
		display inline-block
		text-align left
		max-width 10rem
		margin-left 1rem
	.toc-child
		margin 0.2rem 0 0.2rem 0.5rem
.post
	header 
		text-align center
	h1 
		margin-bottom 0
		color #222
		font 300 2rem "Helvetica Neue",Helvetica,Arial,sans-serif
	h2 
		margin-bottom 40px
		font 300 1.5rem "Helvetica Neue",Helvetica,Arial,sans-serif
		color #111
		&.headline 
			font-size 1.2rem
			margin -5px 0 40px 0
			color color-meta
			text-transform uppercase
			letter-spacing 2px
			display inline-block
h2 
	&.footline 
		font italic 400 .8rem "Helvetica Neue",Helvetica,Arial,sans-serif
		display inline-block
		margin 40px 0 -5px 0
		a 
			&:before 
				content "#"
			&:hover
				text-decoration underline
	&.month 
		width 100%
		font 700 .8rem "Helvetica Neue",helvetica,Arial,sans-serif
		text-transform uppercase
		margin-top 40px
		margin-bottom 10px
		padding-bottom 10px
		border-bottom 1px solid #eee
#post-meta 
	font-size .8rem
	font-weight 700
	line-height 1.4
	border-top 1px solid #eee
	padding-top 40px
	margin-bottom 40px
	padding-bottom 40px
	margin-top 40px
	color #444
	border-bottom 1px solid #eee
	div 
		margin 0 25px 0 0
		float left
		span 
			color #aaa
			font-weight 500
			display block
			&.dark 
				color #1e2025
	img 
		&.avatar 
			height 36px
			width 36px
			float left
			border-radius 50%
			margin-top 3px
			margin-right 20px
			box-shadow 0 0 0 3px #fff,0 0 0 4px #eee
#back2top 
	float right
	margin -2px
	a 
		font-size .8rem
		font-weight 700
		margin-top 4px
		color #fff
		display inline-block
		vertical-align middle
		padding 6px 10px
		border-radius 4px
		margin-left 2px
		background color-theme
		&:hover 
			opacity .8
h1 
	&.archive 
		margin-bottom 0
#comment
	margin 2rem 0